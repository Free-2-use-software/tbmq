{
  "extends": "../tsconfig.json",
  "compilerOptions": {
    "outDir": "../out-tsc/app",
    "types": ["node", "jquery", "tooltipster", "js-beautify"]
  },
  "angularCompilerOptions": {
    "fullTemplateTypeCheck": true,
    "supportTestBed": true,
    "supportJitMode": true
  },
  "files": [
    "main.ts",
    "polyfills.ts"
  ],
  "exclude": [
    "test.ts",
    "**/*.spec.ts"
  ],
  "include": [
    "**/*.d.ts"
  ]
}
